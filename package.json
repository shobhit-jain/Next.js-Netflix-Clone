    "babel-plugin-macros": "^3.0.1",
    "cypress": "^7.4.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "4",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.12",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx|js|jsx|json|md|mdx|yml)": [
      "yarn lint",
      "yarn format"
    ]
  }
