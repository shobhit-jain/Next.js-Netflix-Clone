    "cypress:open": "cypress open"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dashify": "^2.0.0",
    "dotenv": "^8.2.0",
    "firebase": "^8.6.2",
    "local-storage": "^2.0.0",
    "next": "^10.1.3",
    "next-compose-plugins": "^2.2.1",
    "next-images": "^1.7.0",
    "next-pwa": "^5.2.21",
    "next-seo": "^4.24.0",
    "next-videos": "1.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.7.1",
    "sass": "^1.32.11",
    "swr": "^0.5.6",
    "tailwindcss": "^2.1.1",
    "tailwindcss-children": "^2.1.0",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
